<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarSize">48dp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="SmallFont" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="NewPostTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_margin">10dip</item>
    </style>

    <style name="NewPostLocationValue" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_margin">10dip</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
    </style>
</resources>